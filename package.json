{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Personal portfolio website with blog",
  "main": "build.js",
  "scripts": {
    "build": "npm run build:css && node build.js",
    "build:css": "npx postcss ./assets/css/input.css -o ./assets/css/main.css --minify",
    "dev": "node build.js --watch",
    "dev:css": "npx postcss ./assets/css/input.css -o ./assets/css/main.css --watch"
  },
  "keywords": [
    "portfolio",
    "blog",
    "backend-developer"
  ],
  "author": "Oleksandr Borovyk",
  "license": "MIT",
  "dependencies": {
    "front-matter": "^4.0.2",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18"
  }
}
